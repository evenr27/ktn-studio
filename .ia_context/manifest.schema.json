{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ktn-studio.local/schemas/context-manifest.json",
  "title": "KTN Context Manifest",
  "type": "object",
  "required": ["project", "structure"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference for editors (VSCode)."
    },
    "$id": {
      "type": "string",
      "description": "Optional identifier for the manifest."
    },
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the manifest (not the project)."
    },
    "description": {
      "type": "string"
    },
    "structure": {
      "type": "object",
      "description": "Main tree of context files.",
      "additionalProperties": {
        "$ref": "#/definitions/node"
      }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Kind of node: overview | technical | factory | architecture | context | setup | adr | planning | reference"
        },
        "description": {
          "type": "string"
        },
        "children": {
          "type": "object",
          "description": "Nested files or folders",
          "additionalProperties": {
            "$ref": "#/definitions/node"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}