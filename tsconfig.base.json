{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ktn/core-form": ["libs/core-form/index.ts"],
      "@ktn/core-form/*": ["libs/core-form/*"],

      "@ktn/core": ["libs/core/index.ts"],
      "@ktn/core/*": ["libs/core/*"],

      "@ktn/hooks-form": ["libs/hooks-form/index.ts"],
      "@ktn/hooks-form/*": ["libs/hooks-form/*"],

      "@ktn/hooks": ["libs/hooks/index.ts"],
      "@ktn/hooks/*": ["libs/hooks/*"],

      "@ktn/theme": ["libs/theme/index.ts"],
      "@ktn/theme/*": ["libs/theme/*"],

      "@ktn/ui-atoms": ["libs/ui-atoms/index.ts"],
      "@ktn/ui-atoms/*": ["libs/ui-atoms/*"],

      "@ktn/ui-cells": ["libs/ui-cells/index.ts"],
      "@ktn/ui-cells/*": ["libs/ui-cells/*"],

      "@ktn/ui-controls-core": ["libs/ui-controls-core/index.ts"],
      "@ktn/ui-controls-core/*": ["libs/ui-controls-core/*"],

      "@ktn/ui-controls-mui": ["libs/ui-controls-mui/index.ts"],
      "@ktn/ui-controls-mui/*": ["libs/ui-controls-mui/*"],

      "@ktn/ui-features": ["libs/ui-features/index.ts"],
      "@ktn/ui-features/*": ["libs/ui-features/*"],

      "@ktn/ui-molecules": ["libs/ui-molecules/index.ts"],
      "@ktn/ui-molecules/*": ["libs/ui-molecules/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
